<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>wineapphome</title>
    <link rel="stylesheet" href="fonts/ionicons.min.css">
    <link rel="stylesheet" href="fonts/simple-line-icons.min.css">
    <link rel="stylesheet" href="fonts/typicons.min.css">
    <link rel="stylesheet" href="css/Animated-CSS-Waves-Background-SVG.css">
    <link rel="stylesheet" href="css/Animated-numbers-section.css">
    <link rel="stylesheet" href="css/Login-Form-Clean.css">
    <link rel="stylesheet" href="css/Map-Clean.css">
    <link rel="stylesheet" href="css/styles.css">
</head>

<style>
    html {
        font-family: 'Operator Mono';
        src: url('fonts/OperatorMono-Book.otf');
    }
</style>

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#check").click(function (event) {
                event.preventDefault();
                $.post("checkID", $("form").serialize(), function (result, status, data) {
                    console.log(status);
                    if (status == 'success') {
                        if (JSON.parse(data.responseText).message ==
                            'successfully found identification number') {
                            window.location.href = "/feed";
                        } else {
                            $("#error").html(JSON.parse(data.responseText).message);
                        }
                    }
                })
            });
        });
    </script>
</head>

<style>
    body {
        background-color: rgb(244,71,107);
    }

    .sr-only {
        text-align: center;
    }

    .form-group {
        text-align: center;
    }

    .btn {
        color: white;
    }

    #error {
        text-align: center;
    }
</style>

<body>
    <div class="login-clean">
        <form action="/checkID" id="form" method="post">
            <h2 class="sr-only">Enter ID on Label to Track</h2>
            <div class="illustration"><i class="icon ion-wineglass"></i></div>
            <div class="form-group"><input class="form-control" type="id" id="id" name="id"
                    placeholder="Identification Code"></div>
            <div id="error" style="color:  rgb(244,71,107); margin-top: 10px;"></div>
            <div class="form-group"><button class="btn btn-primary btn-block" type="submit" id="check">View</button>
            </div>
        </form>
    </div>
    <script src="js/jquery.min.js"></script>
    <script src="js/Animated-numbers-section.js"></script>
</body>

</html>